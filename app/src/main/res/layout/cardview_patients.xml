<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="15dp"
    android:elevation="5dp"
    android:padding="20dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/patients_addbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/patients_name"
            android:backgroundTint="@android:color/white"
            android:tint="#87CEEB" />

        <TextView
            android:id="@+id/patients_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:text="Line one"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/patients_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/patients_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="Line two" />

    </RelativeLayout>

</android.support.v7.widget.CardView>