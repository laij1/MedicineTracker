<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_employee_layout"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/add_employee_title"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@color/recyclerViewBackground"
        android:paddingTop="12dp"
        android:text="加入員工"
        android:textAlignment="center"
        android:textColor="@color/menuTextIconColor"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/add_employee_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_employee_title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text=" 姓名"
        android:textColor="@color/menuTextIconColor"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_employee_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_employee_name_title"
        android:layout_marginLeft="30dp"
        android:text=""
        android:textColor="@color/menuTextIconColor"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/add_employee_position_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_employee_name"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:text=" 職稱"
        android:textColor="@color/menuTextIconColor"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_employee_position"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_employee_position_title"
        android:layout_marginLeft="30dp"
        android:text="護理師"
        android:textColor="@color/menuTextIconColor"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/add_employee_confirmbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/add_employee_cancelbutton"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="250dp"
        android:backgroundTint="@color/dialog_bg_color"
        android:text="確定"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/add_employee_cancelbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_employee_position"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dialog_bg_color"
        android:text="取消"
        android:textColor="@color/colorAccent" />

</RelativeLayout>