<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <android.support.design.widget.TabLayout
        android:id="@+id/dashboard_setting_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fontFamily="Roboto-Medium"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        app:tabTextColor="@color/menuTextIconColor"
        android:background="@android:color/white">
    </android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/dashboard_setting_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dashboard_setting_tabLayout"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_setting_tabLayout">
    </android.support.v4.view.ViewPager>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/dashboard_setting_fab"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="27dp"
        android:backgroundTint="@color/colorAccent"
        android:elevation="3dp"
        android:src="@drawable/ic_assign"
        android:tint="@android:color/white"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|end" />


</RelativeLayout>