<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startpane"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="安禾診所"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/startpane"
        android:layout_width="450dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_round">

        <TextView
            android:id="@+id/iplabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="80dp"
            android:text="IP ADDRESS"
            android:textColor="@color/menuTextIconColor"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/ipaddress"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iplabel"
            android:layout_below="@id/iplabel"
            android:text="192.168.0.10"
            android:textColor="@color/menuTextIconColor"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/portlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iplabel"
            android:layout_below="@id/ipaddress"
            android:layout_marginTop="30dp"
            android:text="PORT"
            android:textColor="@color/menuTextIconColor"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/port"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iplabel"
            android:layout_below="@+id/portlabel"
            android:text="8843"
            android:textColor="@color/menuTextIconColor"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/connect_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="42dp"
            android:layout_marginEnd="117dp"
            android:text="連線狀態"
            android:textColor="@color/menuTextIconColor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="40dp"
            android:elevation="3dp"
            android:src="@drawable/ic_arrow"
            android:tint="@android:color/white"
            app:fabSize="normal" />

    </RelativeLayout>







</RelativeLayout>