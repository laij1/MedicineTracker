<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/medicine_detail_inventory_layout"
    android:clickable="true">


    <RelativeLayout
        android:id="@+id/medicine_detail_inventory_upperview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradientbackground"
        android:elevation="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="700dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:background="@drawable/dialog_round"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="161dp"
                android:src="@drawable/ic_calender"
                android:tint="@color/menuTextIconColor" />

            <TextView
                android:id="@+id/medicine_detail_inventory_startdate_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/medicine_detail_inventory_startdate"
                android:layout_alignStart="@id/medicine_detail_inventory_startdate"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:text="開始日期"
                android:textColor="@color/menuTextIconColor"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/medicine_detail_inventory_startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/editTextBackground"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="215dp"
                android:text=" 2018-09-01"
                android:textSize="18dp"
                android:textColor="@color/menuTextIconColor"
                android:tint="@color/menuTextIconColor" />

            <TextView
                android:id="@+id/medicine_detail_inventory_endtdate_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/medicine_detail_inventory_enddate"
                android:layout_alignStart="@id/medicine_detail_inventory_enddate"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:text="結束日期"
                android:textColor="@color/menuTextIconColor"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/medicine_detail_inventory_enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/editTextBackground"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="245dp"
                android:text=" 2018-09-04"
                android:textSize="18dp"
                android:textColor="@color/menuTextIconColor"
                android:tint="@color/menuTextIconColor" />

            <ImageView
                android:id="@+id/medicine_detail_inventory_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="160dp"
                android:backgroundTint="@color/dialog_bg_color"
                android:src="@drawable/ic_history_search"
                android:tint="@color/colorPrimaryDark" />

        </RelativeLayout>

        <TextView
            android:id="@+id/medicine_detail_inventory_display"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="37dp"
            android:elevation="6dp"
            android:gravity="center"
            android:text="medicine name"
            android:textSize="30dp" />




    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/medicine_detail_inventory_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/medicine_detail_inventory_upperview"
        android:background="@color/recyclerViewBackground"
        android:padding="4dp"
        android:scrollbars="vertical" />


</RelativeLayout>