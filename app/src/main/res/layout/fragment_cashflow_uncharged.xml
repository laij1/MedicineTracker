<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/cashflow_uncharged_layout">


    <RelativeLayout
        android:id="@+id/cashflow_uncharged_upperview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradientbackground"
        android:elevation="3dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="700dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/dialog_round">


            <ImageView
                android:id="@+id/cashflow_uncharged_sign"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="214dp"
                android:src="@drawable/ic_price"
                android:tint="@color/menuTextIconColor" />

            <TextView
                android:id="@+id/cashflow_uncharged_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/cashflow_uncharged_sign"
                android:paddingLeft="15dp"
                android:text="總未收款金額："
                android:textColor="@color/menuTextIconColor"
                android:textSize="23dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/cashflow_uncharged_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/cashflow_uncharged_title"
                android:paddingStart="15dp"
                android:text="0"
                android:textColor="@color/menuTextIconColor"
                android:textSize="23dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/cashflow_uncharged_display"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="37dp"
            android:elevation="6dp"
            android:gravity="center"
            android:text="today's date"
            android:textSize="30dp" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cashflow_uncharged_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cashflow_today_upperview"
        android:background="@color/recyclerViewBackground"
        android:padding="4dp"
        android:scrollbars="vertical" />


</RelativeLayout>