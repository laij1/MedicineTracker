<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_outside_patient_layout"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/edit_outside_patient_title"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@color/recyclerViewBackground"
        android:paddingTop="12dp"
        android:text="外院人士姓名"
        android:textAlignment="center"
        android:textColor="@color/menuTextIconColor"
        android:textSize="25dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_outside_patient_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_outside_patient_title"
        android:layout_marginLeft="30dp"
        android:text=""
        android:textColor="@color/menuTextIconColor"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/edit_outside_patient_confirmbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/edit_outside_patient_cancelbutton"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="250dp"
        android:backgroundTint="@color/dialog_bg_color"
        android:text="確定"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/edit_outside_patient_cancelbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_outside_patient_name"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dialog_bg_color"
        android:text="取消"
        android:textColor="@color/colorAccent" />

</RelativeLayout>