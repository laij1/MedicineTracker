<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_inventory_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/add_inventory_medicine"
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@color/recyclerViewBackground"
        android:paddingTop="12dp"
        android:text="藥品名稱"
        android:textAlignment="center"

        android:textColor="@color/menuTextIconColor"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/add_inventory_amount_title"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_inventory_medicine"
        android:text="數量"
        android:textAlignment="center"
        android:textColor="@color/menuTextIconColor"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/add_inventory_amount"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_inventory_amount_title"
        android:background="?attr/editTextBackground"
        android:text="0"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:textAlignment="center"
        android:textColor="@color/menuTextIconColor"
        android:textSize="20dp"
        android:tint="@color/menuTextIconColor" />

    <TextView
        android:id="@+id/add_inventory_confirmbutton"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignEnd="@+id/add_inventory_amount_title"
        android:layout_below="@+id/add_inventory_amount"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/dialog_bg_color"
        android:gravity="center_vertical"
        android:text="確定"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/add_inventory_cancelbutton"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignTop="@+id/add_inventory_confirmbutton"
        android:layout_marginRight="30dp"
        android:layout_toStartOf="@+id/add_inventory_confirmbutton"
        android:backgroundTint="@color/dialog_bg_color"
        android:gravity="center_vertical"
        android:text="取消"
        android:textColor="@color/colorAccent" />

</RelativeLayout>