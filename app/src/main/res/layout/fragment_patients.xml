<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/patients_layout">

    <android.support.design.widget.TabLayout
        android:id="@+id/patients_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="0dp"
        android:fontFamily="Roboto-Medium"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        app:tabTextColor="@color/menuTextIconColor"
        android:background="@android:color/white">

    </android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/patients_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/patients_tabLayout"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/patients_tabLayout">

    </android.support.v4.view.ViewPager>


</RelativeLayout>