<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/signature_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/signure_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="請簽名"
            android:textAlignment="center"
            android:textStyle="bold" />
        </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/signature_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/signature_layout"
        android:layout_above="@id/signature_confirmbutton">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/signature_confirmbutton"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/dialog_bg_color"
        android:gravity="center_vertical"
        android:text="確定"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/signature_cancelbutton"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="115dp"
        android:gravity="center_vertical"
        android:backgroundTint="@color/dialog_bg_color"
        android:textColor="@color/colorAccent"
        android:text="取消" />

</RelativeLayout>