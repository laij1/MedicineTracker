<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="15dp"
    android:elevation="5dp"
    android:padding="20dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/patient_detail_search_createdate"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/patient_detail_search_createby"
            android:layout_marginEnd="130dp"
            android:text="2018-08-20"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/patient_detail_search_chargedate"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignStart="@id/patient_detail_search_createdate"
            android:layout_alignTop="@id/patient_detail_search_chargeby"
            android:text="2018-08-20"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/patient_detail_search_createby"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/summary_payment"
            android:gravity="center"
            android:text="護士名字"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/patient_detail_search_itemname"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/patient_detail_search_patientname"
            android:text="item name"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/patient_detail_search_patientname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:paddingRight="15dp"
            android:text="病患名稱"
            android:textColor="@color/menuTextIconColor"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/patient_detail_search_payment"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/patient_detail_search_createdate"
            android:layout_marginEnd="323dp"
            android:background="@drawable/summary_payment"
            android:gravity="center"
            android:text="現"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/patient_detail_search_quantity"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/patient_detail_search_createdate"
            android:layout_marginEnd="250dp"
            android:background="@drawable/summary_payment"
            android:gravity="center"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/patient_detail_search_dollarsign"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignEnd="@+id/patient_detail_search_payment"
            android:layout_alignTop="@+id/patient_detail_search_chargedate"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_price"
            android:tint="@color/menuTextIconColor" />

        <TextView
            android:id="@+id/patient_detail_search_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/patient_detail_search_chargedate"
            android:layout_marginStart="-323dp"
            android:layout_toEndOf="@+id/patient_detail_search_payment"
            android:text="100000"
            android:textAlignment="viewEnd"
            android:textColor="@color/menuTextIconColor"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/patient_detail_search_chargeby"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@id/patient_detail_search_createby"
            android:layout_marginBottom="15dp"
            android:background="@drawable/summary_payment"
            android:gravity="center"
            android:text="尚未結帳"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>