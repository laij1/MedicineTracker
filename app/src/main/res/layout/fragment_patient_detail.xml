<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/patient_detail_layout">

    <FrameLayout
        android:id="@+id/patient_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/patient_detail_view"
        android:background="@color/recyclerViewBackground">

    </FrameLayout>

    <View
        android:id="@+id/patient_detail_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/patient_detail_bottom_navigation"
        android:background="@android:color/darker_gray"></View>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/patient_detail_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="?android:windowBackground"
        app:menu="@menu/patient_detail_navigation" />

</RelativeLayout>