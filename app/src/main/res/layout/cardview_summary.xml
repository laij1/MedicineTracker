<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="15dp"
    android:elevation="50dp"
    android:padding="20dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/summary_itemname"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="item name"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/summary_payment"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="319dp"
            android:background="@drawable/summary_payment"
            android:gravity="center"
            android:text="ç¾"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/summary_quantity"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="219dp"
            android:background="@drawable/summary_payment"
            android:gravity="center"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/summary_dollarsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="105dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_price"
            android:tint="@color/menuTextIconColor"/>

        <TextView
            android:id="@+id/summary_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="-105dp"
            android:layout_toEndOf="@+id/summary_dollarsign"
            android:text="100000"
            android:textSize="20dp"
            android:textColor="@color/menuTextIconColor"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
