<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dashboard_today_layout">


    <RelativeLayout
        android:id="@+id/dashboard_today_upperview"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradientbackground"
        android:elevation="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dashboard_today_display"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="37dp"
            android:elevation="6dp"
            android:gravity="center"
            android:text="today's date"
            android:textSize="30dp" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dashboard_today_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dashboard_today_upperview"
        android:background="@color/recyclerViewBackground"
        android:padding="4dp"
        android:scrollbars="vertical" />


</RelativeLayout>