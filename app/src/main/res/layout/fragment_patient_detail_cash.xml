<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/patient_detail_cash_layout">

    <RelativeLayout
        android:id="@+id/patient_detail_cash_upperview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradientbackground"
        android:elevation="3dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="169dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/dialog_round">

            <ImageView
                android:id="@+id/patient_detail_cash_checkout_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/patient_detail_cash_checkout"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_checkout"
                android:tint="@color/menuTextIconColor" />

            <TextView
                android:id="@+id/patient_detail_cash_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="35dp"
                android:text="00000"
                android:textAlignment="viewEnd"
                android:textColor="@color/menuTextIconColor"
                android:textSize="20dp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/patient_detail_cash_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:elevation="6dp"
            android:gravity="center"
            android:text="patient name"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/patient_detail_cash_ic"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/patient_detail_cash_name"
            android:layout_centerHorizontal="true"
            android:elevation="6dp"
            android:gravity="center"
            android:text="patient id"
            android:textSize="20dp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/patient_detail_cash_recyclerview"
        android:layout_below="@id/patient_detail_cash_upperview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:padding="4dp"
        android:background="@color/recyclerViewBackground"/>

    <com.clinic.anhe.medicinetracker.utils.CounterFab
        android:id="@+id/patient_detail_cash_fab"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="35dp"
        app:backgroundTint="@color/checkoutFabColor"
        android:tint="@android:color/white"
        app:elevation="2dp"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_checkout" />



    <!--<TextView-->
    <!--android:id="@+id/odd_day_textView"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerInParent="true"-->
    <!--android:text="Mon Wed Fri"-->
    <!--android:textAppearance="?android:attr/textAppearanceLarge"/>-->

</RelativeLayout>