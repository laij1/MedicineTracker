<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recyclerViewBackground"
    android:elevation="3dp">

    <RadioGroup
        android:id="@+id/shift_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/morning_radiobutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_morning"
            android:backgroundTint="@color/menuTextIconColor"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:button="@null"
            />

        <RadioButton
            android:id="@+id/afternoon_radiobutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_afternoon"
            android:backgroundTint="@color/menuTextIconColor"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:button="@null" />

        <RadioButton
            android:id="@+id/night_radiobutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_night"
            android:backgroundTint="@color/menuTextIconColor"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:button="@null" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/shift_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shift_radiogroup"
        android:elevation="3dp"
       >

    </FrameLayout>

</RelativeLayout>