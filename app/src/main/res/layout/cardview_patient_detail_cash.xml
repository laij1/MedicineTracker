<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="15dp"
    android:elevation="5dp"
    android:padding="20dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/patient_detail_cash_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_delete"
            android:backgroundTint="@color/menuTextIconColor" />


        <TextView
            android:id="@+id/patient_detail_cash_createdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/patient_detail_cash_delete"
            android:text="2018-08-20"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/patient_detail_cash_createby"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/patient_detail_cash_payment"
            android:background="@drawable/summary_payment"
            android:gravity="center"
            android:text="護士名字"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/patient_detail_cash_itemname"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="135dp"
            android:text="item name"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/patient_detail_cash_payment"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@+id/patient_detail_cash_quantity"
            android:background="@drawable/summary_payment"
            android:gravity="center"
            android:text="現"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/patient_detail_cash_quantity"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="203dp"
            android:background="@drawable/summary_payment"
            android:gravity="center"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/patient_detail_cash_dollarsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/patient_detail_cash_subtotal"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_price"
            android:tint="@color/menuTextIconColor" />

        <TextView
            android:id="@+id/patient_detail_cash_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="92dp"
            android:text="100000"
            android:textAlignment="viewEnd"
            android:textColor="@color/menuTextIconColor"
            android:textSize="20dp" />

        <Button
            android:id="@+id/patient_detail_cash_button"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/checkoutButtonColor"
            android:text="結帳"
            android:textColor="@color/menuTextIconColor"
            android:textSize="18dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
