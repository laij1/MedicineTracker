<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_medicine_layout"
    android:layout_width="500dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/add_medicine_title"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@color/recyclerViewBackground"
        android:paddingTop="12dp"
        android:text="加入藥品"
        android:textAlignment="center"
        android:textColor="@color/menuTextIconColor"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/add_medicine_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_medicine_title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="藥品名稱"
        android:textColor="@color/menuTextIconColor"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_medicine_item"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_medicine_item_title"
        android:layout_marginLeft="30dp"
        android:text=""
        android:textColor="@color/menuTextIconColor"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/add_medicine_dose_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_medicine_item"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:text="藥品劑量"
        android:textColor="@color/menuTextIconColor"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_medicine_dose"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_medicine_dose_title"
        android:layout_marginLeft="30dp"
        android:text="/盒"
        android:textColor="@color/menuTextIconColor"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/add_medicine_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_medicine_dose"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:text="藥品價錢"
        android:textColor="@color/menuTextIconColor"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_medicine_price"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_medicine_price_title"
        android:layout_marginLeft="30dp"
        android:text="0"
        android:textColor="@color/menuTextIconColor"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/add_medicine_stock_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_medicine_price"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:text="庫存數量"
        android:textColor="@color/menuTextIconColor"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_medicine_stock"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_medicine_stock_title"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:text="0"
        android:textColor="@color/menuTextIconColor"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/add_medicine_confirmbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/add_medicine_cancelbutton"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="450dp"
        android:backgroundTint="@color/dialog_bg_color"
        android:text="確定"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/add_medicine_cancelbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_medicine_stock"
        android:layout_marginLeft="400dp"
        android:backgroundTint="@color/dialog_bg_color"
        android:text="取消"
        android:textColor="@color/colorAccent" />

</RelativeLayout>